<div class="wrapper tweet_wrapper">
  <div class="input">
    <%= form_for @input_content do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <% if @input_content.persisted? %>
          編集中
        <% end %>
        <br/>
        <%= f.text_area :content, class: 'form-control', rows: 3 %>
      </div>
      <div class="actions clearfix">
        <div class="alert">
          <% if flash[:alert] %>
            <% flash[:alert].each do |content| %>
              <p class="alert"><%= content %></p>
            <% end %>
          <% end %>
        </div>
        <div class="post">
          <% if @input_content.persisted? %>
            <%= link_to root_path do %>
              <%= button_tag 'Cancel', class: 'btn btn-default' %>
            <% end %>
          <% end %>
          <%= f.submit 'Post', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="tweet">
    <% @tweet.each do |t| %>
      <div class="per <%= 'mine' if t.user.id == current_user.id %>">
        <p class="icon">
          <% if t.user.image? %>
            <%= image_tag t.user.image.url %>
          <% else %>
            NO IMAGE
          <% end %>
        </p>
        <%= simple_format t.content, class: 'content' %>
        <% if mypost?(t) %>
          <%= link_to root_path(id: t.id, content: t.content) do %>
            <%= button_tag 'Edit', class: 'btn btn-info' %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>